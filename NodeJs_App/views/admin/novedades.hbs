<!DOCTYPE html>

<body>
    <!--Navegador-->
    <nav class="navbar justify-content-end mb-3">
        <a class="nav-link mr-auto icon" href="#">B&D</a>
        <a class="nav-link btn-grad" href="nosotros">Nosotros</a>
        <a class="nav-link btn-grad" href="servicios">Servicios</a>
        <a class="nav-link btn-grad" href="menu">Menu</a>
        <a class="nav-link btn-grad activo" href="novedades">Novedades</a>
        <a class="nav-link btn-grad" href="testimonios">Testimonios</a>
        <a class="nav-link btn-grad" href="productosDestacados">Productos Destacados</a>
    </nav>
    <br>
    <div class="d-flex justify-content-end">
        <p class="text-end">Hola {{usuario}}!! <a class="btn btn-danger" href="/admin/login">Cerrar Sesion</a></p>
    </div>
    <br>
    <div class="container">
        <div class="d-flex justify-content-between">
            <div>
                <h4>Listado de novedades</h4>
            </div>
            <div>
                <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fa fa-plus"></i>Nuevo</a>
            </div>
        </div>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Titulo</th>
                    <th scope="col">SubTitulo</th>
                    <th scope="col">Texto</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Acciones</th>
                </tr>
            </thead>
            <tbody>
                {{#each novedades}}
                <tr>
                    <th scope="row">{{id}}</th>
                    <td>{{titulo}}</td>
                    <td>{{subtitulo}}</td>
                    <td>{{cuerpo}}</td>
                    <td>{{{imagen}}}</td>
                    <td scope="text-center">
                        <a class="btn btn-warning" title="Editar" href="/admin/novedades/editar/{{id}}">
                            <i class="fa fa-paint-brush"></i>
                        </a>
                        <a class="btn btn-danger" title="Eliminar" href="/admin/novedades/eliminar/{{id}}">
                            <i class="fa fa-trash"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</body>

</html>