<nav class="navbar justify-content-end mb-3">
    <a class="nav-link mr-auto icon" href="#">B&D</a>
    <a class="nav-link btn-grad" href="/admin/servicios">Volver</a>
</nav>
<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Editar el servicio</h4>
            <form action="/admin/servicios/editarServicios" method="post" enctype="multipart/form-data">
            <input type="hidden" value="{{servicio.id}}" name="id">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" value="{{servicio.titulo}}" name="titulo">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Descripcion" name="descripcion">{{servicio.descripcion}}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Editar</button>
            </form>
        </div>
    </div>
    {{#if error}}
        <p>{{message}}</p>
    {{/if}}
</div>