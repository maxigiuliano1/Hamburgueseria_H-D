<nav class="navbar justify-content-end mb-3">
    <a class="nav-link mr-auto icon" href="#">B&D</a>
    <a class="nav-link btn-grad activo" href="/admin/productosDestacados">Productos Destacados</a>
</nav>
<div class="container" style="margin:100px auto">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar una nuevo producto destacado</h4>
            <form action="/admin/productosDestacados/agregarProductosDestacados" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Titulo" name="titulo">
                </div>
                <div class="form-group">
                    <textarea type="text" class="form-control" placeholder="Descripcion" name="descripcion"></textarea>
                </div>
                <div class="form-group">
                    <label>Imagen: <input type="file" name="imagen" id="imagen"></label>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
        </div>
    </div>
    {{#if error}}
        <p>{{message}}</p>
    {{/if}}
</div>